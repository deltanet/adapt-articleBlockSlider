{{! make the _globals object in course.json available to this template}}
{{import_globals}}

<div class="article__inner">

  {{#any displayTitle body instruction}}
  <div class="article__header">
    <div class="article__header-inner">

      {{#if displayTitle}}
      <div class="article__title">

        {{#unless _disableAccessibilityState}}
        <div class="js-heading"></div>
        {{/unless}}

        <div class="article__title-inner"{{#unless _disableAccessibilityState}} aria-hidden="true"{{/unless}}>
          {{{compile displayTitle}}}
        </div>

      </div>
      {{/if}}

      {{#if body}}
      <div class="article__body">
        <div class="article__body-inner">
          {{{compile body}}}
        </div>
      </div>
      {{/if}}

      {{#if instruction}}
      <div class="article__instruction">
        <div class="article__instruction-inner">
          {{{compile instruction}}}
        </div>
      </div>
      {{/if}}

    </div>
  </div>
  {{/any}}

  <div class="abs__container{{#if _articleBlockSlider._hasArrows}} has-arrows{{/if}}{{#if _articleBlockSlider._hasTabs}} has-tabs{{/if}}" role="region"{{#if _accessibility._ariaRegions.articleBlockSlider}} tabindex="0" aria-label="{{_accessibility._ariaRegions.articleBlockSlider}}"{{/if}}>

    <div class="abs__toolbar u-clearfix">
      <div class="abs__btn-container u-clearfix">

        {{#if _articleBlockSlider._hasButtons}}
        <button class="btn-text abs__btn-text" data-block-slider="right" aria-label="{{_globals._accessibility._ariaLabels.next}}"></button>
        <button class="btn-text abs__btn-text" data-block-slider="left" aria-label="{{_globals._accessibility._ariaLabels.previous}}"></button>
        {{/if}}

        {{#if _articleBlockSlider._hasArrows}}
	      <button class="btn-icon abs__btn-arrow" data-block-slider="right" aria-label="{{_globals._accessibility._ariaLabels.next}}">
          <div class="icon icon-controls-right"></div>
	      </button>
        <button class="btn-icon abs__btn-arrow" data-block-slider="left" aria-label="{{_globals._accessibility._ariaLabels.previous}}">
          <div class="icon icon-controls-left"></div>
	      </button>
	      {{/if}}

        {{#if _articleBlockSlider._hasTabs}}
        <div class="abs__btn-tab-container">
  	      {{#each _itemButtons}}
  	      <button class="btn-text abs__btn-tab{{#if _className}} {{_className}}{{/if}}" aria-label="{{_title}}" data-block-slider="index" data-block-slider-index="{{this._index}}">

            <div class="abs__btn-title">
              <div class="abs__btn-title-inner">
                {{{_title}}}
              </div>
            </div>

          </button>
  	      {{/each}}
        </div>
	      {{/if}}

      </div>
    </div>

    {{#if _articleBlockSlider._progressLocation}}
	  <div class="abs__progress is-top">
  		{{#each _itemButtons}}
      <div class="abs__progress-item" data-block-slider-progress="index" data-block-slider-index="{{this._index}}"></div>
  		{{/each}}
    </div>
	  {{/if}}

	  <div class="abs__slide-container u-clearfix"{{#if _articleBlockSlider._minHeight}} style="min-height: {{{_articleBlockSlider._minHeight}}}px"{{/if}}>
      <div class="block__container u-clearfix">
        {{!-- Blocks render here --}}
      </div>
	  </div>

	  {{#if _articleBlockSlider._progressLocation}}
	  <div class="abs__progress is-bottom">
      {{#each _itemButtons}}
  		<div class="abs__progress-item" data-block-slider-progress="index" data-block-slider-index="{{this._index}}"></div>
  		{{/each}}
  	</div>
	  {{/if}}

	</div>
</div>

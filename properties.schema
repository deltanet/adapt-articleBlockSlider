{
  "type":"object",
  "$schema": "http://json-schema.org/draft-03/schema",
  "id": "http://jsonschema.net",
  "required":false,
  "properties":{
    "pluginLocations": {
      "type":"object",
      "required":true,
      "properties":{
        "config": {
          "type":"object"
        },
        "course": {
          "type":"object"
        },
        "contentobject": {
          "type":"object"
        },
        "article": {
          "type":"object",
          "properties":{
            "_articleBlockSlider": {
              "type":"object",
              "required":false,
              "legend": "BlockSlider",
              "properties":{
                "_isEnabled": {
                  "type":"boolean",
                  "required":true,
                  "title": "Enabled",
                  "inputType": "Checkbox",
                  "validators": []
                },
                "_slideAnimationDuration": {
                  "type":"number",
                  "required":false,
                  "default":"600",
                  "title": "Slide Animation Duration",
                  "inputType":"Number",
                  "validators": ["number"],
                  "help": "Sets the slide duration, in milliseconds, of the animation between blocks."
                },
                "_heightAnimationDuration": {
                  "type":"number",
                  "required":false,
                  "default":"300",
                  "title": "Height Animation Duration",
                  "inputType":"Number",
                  "validators": ["number"],
                  "help": "Sets the duration, in milliseconds, of the animation between varying blocks heights."
                },
                "_isEnabledOnScreenSizes": {
                  "type": "string",
                  "required": false,
                  "default": "large",
                  "title": "Enabled On Screen Sizes",
                  "inputType": "Text",
                  "validators": [],
                  "help": "Defines which screen sizes the Article Block Slider displays the navigation elements on. Acceptable values are large, medium and small - or a comma-separated list of combinations thereof e.g. 'large medium'."
                },
                "_hasButtons": {
                  "type": "boolean",
                  "required": false,
                  "default": false,
                  "title": "Has Buttons",
                  "inputType": "Checkbox",
                  "validators": [],
                  "help": "Turns the button navigation on and off. If this property is checked, you must uncheck 'Has Tabs' and 'Has Arrows'."
                },
                "_hasTabs": {
                  "type":"boolean",
                  "required":true,
                  "default": false,
                  "title": "Has Tabs",
                  "inputType": "Checkbox",
                  "validators": [],
                  "help": "Turns the tab navigation on and off. If this property is checked, you must uncheck 'Has Buttons' and 'Has Arrows'."
                },
                "_hasArrows": {
                  "type":"boolean",
                  "required":true,
                  "default": true,
                  "title": "Has Arrows",
                  "inputType": "Checkbox",
                  "validators": [],
                  "help": "Turns the arrow navigation on and off. If this property is checked, you must uncheck 'Has Buttons' and 'Has Tabs'."
                },
                "_startIndex": {
                  "type":"number",
                  "required":true,
                  "default": 0,
                  "title": "Start on what block",
                  "inputType": "Number",
                  "validators": ["required", "number"],
                  "help": "Sets which block displays on page load."
                },
                "_hasUniformHeight": {
                  "type":"boolean",
                  "required":true,
                  "default": true,
                  "title": "Has a uniform height",
                  "inputType": "Checkbox",
                  "validators": [],
                  "help": "Sets all elements within the Article Block Slider to use the highest block's height."
                },
                "_minHeight": {
                  "type":"number",
                  "required":false,
                  "default": null,
                  "title": "Min Height",
                  "inputType": "Number",
                  "validators": ["number"],
                  "help": "Sets a minimum height on the .article-block-slider container class."
                },
                "_fullWidth": {
                  "type":"boolean",
                  "required":true,
                  "default": true,
                  "title": "Full Width Layout",
                  "inputType": { "type": "Boolean", "options": [false, true]},
                  "validators": [],
                  "help": "Sets whether the layout is full width. Acceptable values are true and false."
                },
                "_progressLocation": {
                  "type": "string",
                  "required": true,
                  "default": "top",
                  "title": "Progress Location",
                  "inputType": "Text",
                  "validators": [],
                  "help": "Defines the location of the progress bar. Acceptable values are top, bottom and none."
                }
              }
            }
          }
        },
        "block": {
          "type": "object",
          "properties": {
            "_articleBlockSlider": {
              "type": "object",
              "required": false,
              "legend": "BlockSlider",
              "properties": {
                "_isEnabled": {
                  "type": "boolean",
                  "required": true,
                  "title": "Is Enabled",
                  "inputType": "Checkbox",
                  "validators": []
                },
                "forward": {
                  "type": "string",
                  "required": false,
                  "default": "",
                  "title": "Forward Button Text",
                  "inputType": "Text",
                  "validators": [],
                  "translatable": true
                },
                "back": {
                  "type": "string",
                  "required": false,
                  "default": "",
                  "title": "Back Button Text",
                  "inputType": "Text",
                  "validators": [],
                  "translatable": true
                }
              }
            }
          }
        },
        "component": {
          "type":"object"
        }
      }
    }
  }
}
